
<h4>Write your post below and submit when done.</h4>

<form method="POST" action="/post/create/new">
    <div>
        <input type="text" name="post_name" placeholder="Title">
    </div>
    <br>
    <div class="textname">
        <textarea type="text" name="post_content" cols="50" rows="10"></textarea>

    </div>
    <div class="textname">
    <input name="image" type="file" id="fileName" accept="image/*" onchange="validateFileType()"/>
    </div>
 
    <div class="textname">
        <button type="submit">Submit</button>
    </div>
</form>
